{
  "compilerOptions": {
    "target": "ES2020",                     
    "module": "CommonJS",                   
    "lib": ["ES2020", "DOM"],               
    "types": ["node", "@cucumber/cucumber", "@playwright/test"],
    "strict": true,                         
    "esModuleInterop": true,                
    "skipLibCheck": true,                   
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"                        
  },
  "include": [
    "step-definitions/**/*.ts",
    "pages/**/*.ts",
    "features/**/*.ts",
    "utils/**/*.ts"
  ]
}
